{
  "version": "1.0.0",
  "collections": [
    {
      "collectionName": "skills",
      "description": "技能台数据表",
      "fields": [
        {
          "fieldName": "_id",
          "description": "文档ID",
          "type": "String",
          "required": true
        },
        {
          "fieldName": "title",
          "description": "技能标题",
          "type": "String",
          "required": true,
          "maxLength": 50
        },
        {
          "fieldName": "description",
          "description": "技能描述",
          "type": "String",
          "required": true,
          "maxLength": 500
        },
        {
          "fieldName": "category",
          "description": "服务分类",
          "type": "String",
          "required": true,
          "enum": ["housekeeping", "repair", "education", "beauty", "health", "other"]
        },
        {
          "fieldName": "location",
          "description": "服务位置",
          "type": "String",
          "required": true,
          "maxLength": 50
        },
        {
          "fieldName": "price",
          "description": "服务价格",
          "type": "Number",
          "required": true,
          "min": 0,
          "max": 99999
        },
        {
          "fieldName": "priceUnit",
          "description": "价格单位",
          "type": "String",
          "required": true,
          "enum": ["小时", "次", "天", "课时", "项目"]
        },
        {
          "fieldName": "tags",
          "description": "技能标签",
          "type": "Array",
          "maxItems": 5
        },
        {
          "fieldName": "images",
          "description": "服务图片",
          "type": "Array",
          "maxItems": 6
        },
        {
          "fieldName": "phone",
          "description": "联系电话",
          "type": "String",
          "maxLength": 11
        },
        {
          "fieldName": "wechat",
          "description": "微信号",
          "type": "String",
          "maxLength": 20
        },
        {
          "fieldName": "userId",
          "description": "发布用户ID",
          "type": "String",
          "required": true
        },
        {
          "fieldName": "username",
          "description": "发布用户名",
          "type": "String",
          "required": true
        },
        {
          "fieldName": "userAvatar",
          "description": "用户头像",
          "type": "String"
        },
        {
          "fieldName": "rating",
          "description": "评分",
          "type": "Number",
          "default": 5.0,
          "min": 0,
          "max": 5
        },
        {
          "fieldName": "reviewCount",
          "description": "评价数量",
          "type": "Number",
          "default": 0,
          "min": 0
        },
        {
          "fieldName": "viewCount",
          "description": "浏览次数",
          "type": "Number",
          "default": 0,
          "min": 0
        },
        {
          "fieldName": "status",
          "description": "状态：1-已发布 0-草稿 -1-已删除",
          "type": "Number",
          "required": true,
          "enum": [1, 0, -1],
          "default": 1
        },
        {
          "fieldName": "createTime",
          "description": "创建时间",
          "type": "Date",
          "required": true
        },
        {
          "fieldName": "updateTime",
          "description": "更新时间",
          "type": "Date",
          "required": true
        }
      ],
      "indexes": [
        {
          "indexName": "status_createTime",
          "fields": [
            {"fieldName": "status", "direction": 1},
            {"fieldName": "createTime", "direction": -1}
          ]
        },
        {
          "indexName": "category_status",
          "fields": [
            {"fieldName": "category", "direction": 1},
            {"fieldName": "status", "direction": 1}
          ]
        },
        {
          "indexName": "userId_status",
          "fields": [
            {"fieldName": "userId", "direction": 1},
            {"fieldName": "status", "direction": 1}
          ]
        },
        {
          "indexName": "title_text",
          "fields": [
            {"fieldName": "title", "direction": "text"}
          ]
        },
        {
          "indexName": "description_text",
          "fields": [
            {"fieldName": "description", "direction": "text"}
          ]
        }
      ]
    }
  ]
}