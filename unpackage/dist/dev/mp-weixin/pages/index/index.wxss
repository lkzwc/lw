
.container.data-v-1cf27b2a {
		background: linear-gradient(180deg, #f8fafc 0%, #e2e8f0 100%);
		min-height: 100vh;
		padding-bottom: 60rpx;
}

	/* 轮播图样式 */
.banner-section.data-v-1cf27b2a {
		margin: 20rpx 20rpx 24rpx 20rpx;
		border-radius: 20rpx;
		overflow: hidden;
		box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}
.swiper-box.data-v-1cf27b2a {
		height: 320rpx;
}
.swiper-item.data-v-1cf27b2a {
		position: relative;
		height: 100%;
}
.swiper-item image.data-v-1cf27b2a {
		width: 100%;
		height: 100%;
}
.banner-title.data-v-1cf27b2a {
		position: absolute;
		bottom: 24rpx;
		left: 24rpx;
		color: white;
		font-size: 36rpx;
		font-weight: 700;
		text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
		letter-spacing: 1rpx;
}

	/* 个性化菜单样式 */
.creative-menu-section.data-v-1cf27b2a {
		margin: 0 20rpx;
		padding-bottom: 40rpx;
}
.menu-grid.data-v-1cf27b2a {
		display: grid;
		grid-template-columns: 2fr 1fr;
		grid-template-rows: auto auto auto;
		gap: 16rpx;
		height: auto;
}
.menu-card.data-v-1cf27b2a {
		border-radius: 24rpx;
		overflow: hidden;
		box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
}
.menu-card.data-v-1cf27b2a::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0) 100%);
		pointer-events: none;
}
.menu-card.data-v-1cf27b2a:active {
		transform: scale(0.96);
		box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}
.card-content.data-v-1cf27b2a {
		padding: 24rpx;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		position: relative;
		z-index: 1;
}

	/* 大卡片 - 每日热榜 */
.large-card.data-v-1cf27b2a, .news-card.data-v-1cf27b2a {
		grid-column: 1 / 2;
		grid-row: 1 / 2;
		height: 180rpx;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}
.large-card .card-content.data-v-1cf27b2a {
		flex-direction: row;
		align-items: center;
		justify-content: flex-start;
		padding: 28rpx;
}
.large-card .card-info.data-v-1cf27b2a {
		margin-left: 24rpx;
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
}
.large-card .card-title.data-v-1cf27b2a {
		color: white;
		font-size: 34rpx;
		font-weight: 700;
		display: block;
		margin-bottom: 8rpx;
		letter-spacing: 1rpx;
}
.large-card .card-desc.data-v-1cf27b2a {
		color: rgba(255, 255, 255, 0.9);
		font-size: 26rpx;
		display: block;
		font-weight: 500;
}

	/* 中等卡片 - 天气 */
.medium-card.data-v-1cf27b2a, .weather-card.data-v-1cf27b2a {
		grid-column: 2 / 3;
		grid-row: 1 / 2;
		height: 180rpx;
		background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}
.medium-card .card-content.data-v-1cf27b2a {
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 24rpx;
}
.medium-card .card-title.data-v-1cf27b2a {
		color: white;
		font-size: 28rpx;
		font-weight: 700;
		margin-top: 12rpx;
		letter-spacing: 1rpx;
}
.medium-card .card-subtitle.data-v-1cf27b2a {
		color: rgba(255, 255, 255, 0.8);
		font-size: 22rpx;
		margin-top: 6rpx;
		font-weight: 500;
}

	/* 小卡片组 */
.small-cards-group.data-v-1cf27b2a {
		grid-column: 1 / 3;
		grid-row: 2 / 3;
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 16rpx;
		margin: 8rpx 0;
}
.small-card.data-v-1cf27b2a {
		height: 160rpx;
		background: white;
}
.small-card .card-content.data-v-1cf27b2a {
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 24rpx 16rpx;
}
.small-card .card-title.data-v-1cf27b2a {
		color: white;
		font-size: 24rpx;
		font-weight: 600;
		margin-top: 12rpx;
		letter-spacing: 0.5rpx;
		line-height: 1.2;
}
.small-card.card-1.data-v-1cf27b2a {
		background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}
.small-card.card-2.data-v-1cf27b2a {
		background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}
.small-card.card-3.data-v-1cf27b2a {
		background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}
.small-card.card-4.data-v-1cf27b2a {
		background: linear-gradient(135deg, #ffeaa7 0%, #fcb69f 100%);
}
.small-card.card-4 .card-title.data-v-1cf27b2a {
		color: #333;
}

	/* 横向长卡片 - 学习 */
.wide-card.data-v-1cf27b2a {
		grid-column: 1 / 3;
		grid-row: 3 / 4;
		height: 120rpx;
		background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
		margin-top: 8rpx;
}
.wide-card .card-content.data-v-1cf27b2a {
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
		padding: 24rpx;
}
.wide-card .card-left.data-v-1cf27b2a {
		display: flex;
		align-items: center;
		flex: 1;
}
.wide-card .card-info.data-v-1cf27b2a {
		margin-left: 20rpx;
		display: flex;
		flex-direction: column;
		justify-content: center;
}
.wide-card .card-title.data-v-1cf27b2a {
		color: #333;
		font-size: 28rpx;
		font-weight: 700;
		display: block;
		margin-bottom: 4rpx;
		letter-spacing: 1rpx;
}
.wide-card .card-desc.data-v-1cf27b2a {
		color: #666;
		font-size: 22rpx;
		display: block;
		font-weight: 500;
}
.wide-card .card-right.data-v-1cf27b2a {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-width: 100rpx;
}
.progress-text.data-v-1cf27b2a {
		color: #333;
		font-size: 30rpx;
		font-weight: 700;
		margin-bottom: 8rpx;
}
.progress-bar.data-v-1cf27b2a {
		width: 80rpx;
		height: 6rpx;
		background-color: rgba(255, 255, 255, 0.6);
		border-radius: 3rpx;
		overflow: hidden;
}
.progress-fill.data-v-1cf27b2a {
		height: 100%;
		background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
		border-radius: 3rpx;
		transition: width 0.3s ease;
}
