
.container.data-v-1cf27b2a {
		background: linear-gradient(180deg, #f8fafc 0%, #e2e8f0 100%);
		min-height: 100vh;
		padding-bottom: 60rpx;
}

	/* 轮播图样式 */
.banner-section.data-v-1cf27b2a {
		margin: 20rpx 20rpx 24rpx 20rpx;
		border-radius: 20rpx;
		overflow: hidden;
		box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}
.swiper-box.data-v-1cf27b2a {
		height: 320rpx;
}
.swiper-item.data-v-1cf27b2a {
		position: relative;
		height: 100%;
		border-radius: 20rpx;
		overflow: hidden;
}
.swiper-item image.data-v-1cf27b2a {
		width: 100%;
		height: 100%;
		border-radius: 20rpx;
}
.banner-title.data-v-1cf27b2a {
		position: absolute;
		bottom: 20rpx;
		left: 20rpx;
		color: white;
		font-size: 32rpx;
		font-weight: bold;
		text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

	/* 菜单网格样式 */
.creative-menu-section.data-v-1cf27b2a {
		margin: 0 20rpx;
}
.menu-grid.data-v-1cf27b2a {
		display: grid;
		grid-template-columns: 2fr 1fr;
		grid-template-rows: auto auto auto;
		gap: 16rpx;
		grid-template-areas:
			"news weather"
			"small-cards small-cards"
			"learning learning";
}
.menu-card.data-v-1cf27b2a {
		border-radius: 20rpx;
		overflow: hidden;
		box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
		transition: all 0.3s ease;
		cursor: pointer;
}
.menu-card.data-v-1cf27b2a:active {
		transform: scale(0.98);
		box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.12);
}

	/* 大卡片 - 每日热榜 */
.large-card.data-v-1cf27b2a {
		grid-area: news;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		height: 160rpx;
}
.news-card .card-content.data-v-1cf27b2a {
		display: flex;
		align-items: center;
		padding: 24rpx;
		height: 100%;
}
.news-card .card-icon.data-v-1cf27b2a {
		margin-right: 20rpx;
}
.news-card .card-info.data-v-1cf27b2a {
		flex: 1;
}
.news-card .card-title.data-v-1cf27b2a {
		display: block;
		color: white;
		font-size: 28rpx;
		font-weight: bold;
		margin-bottom: 8rpx;
}
.news-card .card-desc.data-v-1cf27b2a {
		display: block;
		color: rgba(255, 255, 255, 0.8);
		font-size: 24rpx;
}

	/* 中等卡片 - 天气 */
.medium-card.data-v-1cf27b2a {
		grid-area: weather;
		background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
		height: 160rpx;
}
.weather-card .card-content.data-v-1cf27b2a {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		padding: 20rpx;
		height: 100%;
}
.weather-loading.data-v-1cf27b2a {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100%;
		gap: 8rpx;
}
.loading-text.data-v-1cf27b2a {
		color: white;
		font-size: 20rpx;
}
.weather-info.data-v-1cf27b2a {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		height: 100%;
}
.weather-main.data-v-1cf27b2a {
		display: flex;
		align-items: center;
		gap: 12rpx;
}
.weather-icon.data-v-1cf27b2a {
		display: flex;
		align-items: center;
		justify-content: center;
}
.weather-primary.data-v-1cf27b2a {
		display: flex;
		flex-direction: column;
		gap: 4rpx;
}
.temperature.data-v-1cf27b2a {
		color: white;
		font-size: 28rpx;
		font-weight: bold;
		line-height: 1;
}
.weather-desc.data-v-1cf27b2a {
		color: rgba(255, 255, 255, 0.9);
		font-size: 20rpx;
}
.weather-details.data-v-1cf27b2a {
		display: flex;
		flex-direction: column;
		gap: 6rpx;
		margin-top: 8rpx;
}
.detail-item.data-v-1cf27b2a {
		display: flex;
		align-items: center;
		gap: 6rpx;
}
.detail-text.data-v-1cf27b2a {
		color: rgba(255, 255, 255, 0.8);
		font-size: 18rpx;
		line-height: 1;
}

	/* 小卡片组 */
.small-cards-group.data-v-1cf27b2a {
		grid-area: small-cards;
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 12rpx;
}
.small-card.data-v-1cf27b2a {
		height: 120rpx;
}
.small-card .card-content.data-v-1cf27b2a {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding: 16rpx;
		height: 100%;
		text-align: center;
}
.small-card .card-title.data-v-1cf27b2a {
		color: white;
		font-size: 20rpx;
		font-weight: bold;
		margin-top: 8rpx;
}

	/* 小卡片颜色 */
.card-1.data-v-1cf27b2a {
		background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}
.card-2.data-v-1cf27b2a {
		background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}
.card-3.data-v-1cf27b2a {
		background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}
.card-4.data-v-1cf27b2a {
		background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

	/* 横向长卡片 - 学习 */
.wide-card.data-v-1cf27b2a {
		grid-area: learning;
		background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
		height: 100rpx;
}
.learning-card .card-content.data-v-1cf27b2a {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 20rpx 24rpx;
		height: 100%;
}
.card-left.data-v-1cf27b2a {
		display: flex;
		align-items: center;
}
.learning-card .card-icon.data-v-1cf27b2a {
		margin-right: 16rpx;
}
.learning-card .card-title.data-v-1cf27b2a {
		display: block;
		color: #333;
		font-size: 26rpx;
		font-weight: bold;
		margin-bottom: 4rpx;
}
.learning-card .card-desc.data-v-1cf27b2a {
		display: block;
		color: #666;
		font-size: 22rpx;
}
.card-right.data-v-1cf27b2a {
		display: flex;
		flex-direction: column;
		align-items: flex-end;
}
.progress-text.data-v-1cf27b2a {
		color: #333;
		font-size: 24rpx;
		font-weight: bold;
		margin-bottom: 8rpx;
}
.progress-bar.data-v-1cf27b2a {
		width: 120rpx;
		height: 8rpx;
		background-color: rgba(255, 255, 255, 0.3);
		border-radius: 4rpx;
		overflow: hidden;
}
.progress-fill.data-v-1cf27b2a {
		height: 100%;
		background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
		border-radius: 4rpx;
		transition: width 0.3s ease;
}

	/* 响应式调整 */
@media screen and (max-width: 750rpx) {
.menu-grid.data-v-1cf27b2a {
			grid-template-columns: 1fr;
			grid-template-areas:
				"news"
				"weather"
				"small-cards"
				"learning";
}
.medium-card.data-v-1cf27b2a {
			height: 120rpx;
}
}
