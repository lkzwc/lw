
.container.data-v-354f064d {
		background-color: #ffffff;
		min-height: 30vh;
		display: flex;
		flex-direction: column;
		color: white;
}

	/* 发布内容区域 */
.publish-content.data-v-354f064d {
		flex: 1;
		padding: 40rpx 32rpx;
		min-height: calc(100vh - 200rpx);
		display: flex;
		flex-direction: column;
}
.content-input.data-v-354f064d {
		width: 100%;
		min-height: 400rpx;
		font-size: 36rpx;
		line-height: 1.6;
		color: #ffffff;
		background-color: transparent;
		border: none;
		outline: none;
		resize: none;
		font-weight: 400;
		flex: 1;
}
.content-input.data-v-354f064d::-webkit-input-placeholder {
		color: #666666;
		font-weight: 300;
}
.content-input.data-v-354f064d::placeholder {
		color: #666666;
		font-weight: 300;
}

	/* 标签面板 */
.tag-panel.data-v-354f064d {
		background-color: #2a2a2a;
		border-radius: 16rpx;
		padding: 24rpx;
		margin-top: 20rpx;
}
.tag-panel-header.data-v-354f064d {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 20rpx;
}
.panel-title.data-v-354f064d {
		font-size: 28rpx;
		font-weight: bold;
		color: #ffffff;
}
.close-panel.data-v-354f064d {
		padding: 8rpx;
}
.hot-tags.data-v-354f064d {
		margin-bottom: 20rpx;
}
.tag-title.data-v-354f064d {
		font-size: 24rpx;
		color: #999;
		margin-bottom: 16rpx;
}
.tag-list.data-v-354f064d {
		display: flex;
		flex-wrap: wrap;
		gap: 12rpx;
}
.tag-item.data-v-354f064d {
		background-color: #3a3a3a;
		padding: 12rpx 20rpx;
		border-radius: 20rpx;
		font-size: 24rpx;
		color: #4A90E2;
		border: 1rpx solid #444;
}

	/* 已选标签 */
.selected-tags.data-v-354f064d {
		display: flex;
		flex-wrap: wrap;
		gap: 12rpx;
		margin-top: 20rpx;
}
.selected-tag.data-v-354f064d {
		display: flex;
		align-items: center;
		background-color: rgba(74, 144, 226, 0.2);
		padding: 8rpx 16rpx;
		border-radius: 16rpx;
}
.tag-text.data-v-354f064d {
		font-size: 24rpx;
		color: #4A90E2;
		margin-right: 8rpx;
}
.remove-tag.data-v-354f064d {
		padding: 4rpx;
}

	/* 图片区域 */
.images-section.data-v-354f064d {
		margin-top: 24rpx;
}
.image-grid.data-v-354f064d {
		display: grid;
		gap: 8rpx;
		border-radius: 16rpx;
		overflow: hidden;
}
.image-grid.grid-1.data-v-354f064d {
		grid-template-columns: 1fr;
}
.image-grid.grid-2.data-v-354f064d {
		grid-template-columns: 1fr 1fr;
}
.image-grid.grid-3.data-v-354f064d {
		grid-template-columns: 2fr 1fr;
		grid-template-rows: 1fr 1fr;
}
.image-grid.grid-3 .image-item.data-v-354f064d:first-child {
		grid-row: 1 / 3;
}
.image-grid.grid-4.data-v-354f064d {
		grid-template-columns: 1fr 1fr;
		grid-template-rows: 1fr 1fr;
}
.image-item.data-v-354f064d {
		position: relative;
		height: 200rpx;
		border-radius: 12rpx;
		overflow: hidden;
}
.uploaded-image.data-v-354f064d {
		width: 100%;
		height: 100%;
}
.image-delete.data-v-354f064d {
		position: absolute;
		top: 8rpx;
		right: 8rpx;
		width: 32rpx;
		height: 32rpx;
		background-color: rgba(0, 0, 0, 0.8);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
}

	/* 底部工具栏 */
.bottom-toolbar.data-v-354f064d {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 24rpx 32rpx;
		background-color: #999;
		border-top: 1rpx solid #333;
}
.toolbar-left.data-v-354f064d {
		display: flex;
		align-items: center;
		gap: 40rpx;
}
.tool-item.data-v-354f064d {
		padding: 12rpx;
		border-radius: 8rpx;
		transition: all 0.2s;
}
.tool-item.data-v-354f064d:active {
		background-color: rgba(255, 255, 255, 0.1);
}
.toolbar-right.data-v-354f064d {
		display: flex;
		align-items: center;
		gap: 24rpx;
}
.privacy-circle.data-v-354f064d {
		width: 60rpx;
		height: 60rpx;
		border-radius: 50%;
		background-color: #2a2a2a;
		border: 2rpx solid #444;
		display: flex;
		align-items: center;
		justify-content: center;
}
.publish-btn.data-v-354f064d {
		width: 120rpx;
		height: 60rpx;
		background-color: #333;
		color: #666;
		border: none;
		border-radius: 30rpx;
		font-size: 28rpx;
		display: flex;
		align-items: center;
		justify-content: center;
		font-weight: 500;
}
.publish-btn.active.data-v-354f064d {
		background-color: #4A90E2;
		color: white;
}
